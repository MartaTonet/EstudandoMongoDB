// MongoDB Playground
// Use Ctrl+Space inside a snippet or a string literal to trigger completions.

const database = 'biblioteca';
const collection = 'livros';

// Create a new database.
use(database);

// Create a new collection.
db.createCollection(collection);

db.livros.insertMany([
  {nome:"Duna", autor:"Frank Herbert", genero:"Ficção", ano:"1995", isbn:"978-85-7657-101-8"},
  {nome:"Dom Casmorro", autor:"Machado de Assis", genero:"Ficção", ano:"1899", isbn:"978-85-0815-361-9"},
  {nome:"O sol é para todos", autor:"Harper Lee", genero:"Ficção", ano:"1960", isbn:"972-29-0683-6"},
  {nome:"Cosmos", autor:"Carl Sagan", genero:"Não-Ficção", ano:"1980", isbn:"978-0-345-53943-4"},
  {nome:"uma Breve História do Tempo", autor:"Stephen Hawking", genero:"Não-Ficção", ano:"1988", isbn:"972-662-010-4"},
  {nome:"Devoradores de", autor:"Frank Herbert", genero:"Ficção", ano:"1995", isbn:"978-0-593-39556-1"}
  
])
//find serve para buscar/procurar os dados inseridos no banco de dados.
// pretty serve para mostrar os dados em formato json 
db.livros.find().pretty()

//consultar na coleção o livro cosmos
db.livros.find(
  {nome:{$eq:"Cosmos"}}
)

//mostrar livros a baixo de 1979
db.livros.find(
  {ano:{$lt:"1979"}}
)

//mostrar livros que não são do ano 1960
db.livros.find(
  {ano:{$ne:"1960"}}
)

//mostrar livros que começam com a letra D
db.livros.find(
  {nome:/^D/}
)

//comando para mostrar livros que terminam com a letra s
db.livros.find(
  {nome:/s$/}
)

// serve para mostrar todos os nomes dos livros do banco
db.livros.distinct(
  "nome"
)


//serve para ordenar a lista em ordem decrescente
db.livros.find().sort({"nome":-1})

//serve para ver a quantidade de livros publicado num determinado ano

db.livros.count(
  {"ano":"1960"}
)






